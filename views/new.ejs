
<% include partials/header %>

<h1 class='display-3 text-center'>
	Create a new Campground
</h1>

<div class='row justify-content-center'>
	<div class='col-8'>
		
	<form action='/campgrounds' method='POST'>
  <div class="form-group">
    <label for="exampleInputEmail1">Please enter your name</label>
    <input name='name' type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Enter the URL of the corresponding image</label>
    <input name='image' type="text" class="form-control" id="exampleInputPassword1" placeholder="Image Url">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
	<a class='ml-2' href='/campgrounds'>Go back</a>
	</div>
</div>


<% include partials/footer %>